@page "/notifications"
@inject NavigationManager Navigation

<div class="relative">
    <button @onclick="ToggleNotifications">
        <span class="icon-bell"></span>
        @if (notifications.Any())
        {
            <span class="absolute top-0 right-20 rounded-full bg-red-600 text-white text-xs px-1">
                @notifications.Count() (WS)
            </span>
        }
    </button>    
    <button @onclick="ToggleNotifications">
        <span class="icon-bell"></span>
        @if (messages.Any())
        {
            <span class="absolute top-0 right-0 rounded-full bg-green-600 text-white text-xs px-1">
                @messages.Count() (GRPC)
            </span>
        }
    </button>
</div>

