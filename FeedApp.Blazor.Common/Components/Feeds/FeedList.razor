@if (IsModalVisible)
{
    <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50">
        <div class="bg-white rounded-lg shadow-lg w-full max-w-md">
            <div class="flex justify-between items-center border-b px-4 py-2">
                <h5 class="text-lg font-semibold">New Feed</h5>
                <button class="text-gray-500 hover:text-gray-700" @onclick="CloseNewFeedModal">&times;</button>
            </div>
            <div class="p-4">
                <FeedEdit OnCloseModal=CloseNewFeedModal />
            </div>
        </div>
    </div>
}

@if (_model != null && _model.Items != null)
{
    <div class="flex flex-col items-center space-y-6">
        <button @onclick=@OpenNewFeedModal
                class="px-3 py-1 text-sm bg-red-500 text-white rounded-xl hover:bg-red-600">
            New Feed
        </button>
        @foreach (var feed in _model.Items)
        {
            <div class="w-full max-w-5xl" key={feed.id}>
                <FeedItem Feed="@feed" OnFeedDeleted="HandleFeedDeleted" />
            </div>
        }
    </div>
}
else
{
    <p class="text-gray-500">No feeds available.</p>
}
