@using Microsoft.AspNetCore.Components.Forms
<EditForm Model="@formData" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary class="text-red-500 mb-2" />

    <div class="mb-4">
        <label class="block text-gray-700 mb-1" for="title">Title</label>
        <InputText id="title" class="w-full border border-gray-300 rounded px-2 py-1" 
        @bind-Value="formData.Title" />
    </div>

    <div class="mb-4">
        <label class="block text-gray-700 mb-1" for="content">Content</label>
        <InputTextArea id="content"
                       class="w-full border border-gray-300 rounded px-2 py-1 min-h-[100px] resize-y"
                       @bind-Value="formData.Content" />
    </div>

    <div class="mb-4">
        <label class="block text-gray-700 mb-1" for="image">Image</label>
        <InputFile id="image" OnChange="HandleImageUpload"
                   class="block w-full text-sm text-gray-700 border border-gray-300 rounded cursor-pointer bg-gray-50 focus:outline-none" />

        @if (formData.ImageUrl is not null)
        {
            <div class="mt-2">
                <img src="@formData.ImageUrl" alt="Preview" class="max-h-48 rounded shadow" />
            </div>
        }
    </div>

    <div class="mb-4">
        <label class="block text-gray-700 mb-1" for="videoUrl">Video URL</label>
        <InputText id="videoUrl"
                   placeholder="https://youtube.com/..."
                   class="w-full border border-gray-300 rounded px-2 py-1"
                   @bind-Value="formData.VideoUrl" />
    </div>

    <div class="flex justify-end">
        <button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded">
            OK
        </button>
    </div>
</EditForm>
