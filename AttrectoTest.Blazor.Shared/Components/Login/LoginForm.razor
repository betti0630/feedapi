<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white shadow-md rounded-2xl p-8 w-full max-w-sm space-y-4">

        <input @bind="_userName"
               placeholder="Username"
               class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" />

        <input @bind="_password"
               type="password"
               placeholder="Password"
               class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" />

        <button type="submit"
                class="w-full bg-red-500 text-white py-2 rounded-lg hover:bg-red-600 transition"
                @onclick="LoginClick">
            Login
        </button>

        @if (!string.IsNullOrEmpty(_error))
        {
            <p class="bg-red-100 text-red-600 text-sm p-2 rounded-lg text-center">
                @_error
            </p>
        }
    </div>
</div>
