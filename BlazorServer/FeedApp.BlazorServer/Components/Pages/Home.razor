@page "/"
@using FeedApp.Blazor.Common.Components.Feeds
@using FeedApp.Blazor.Common.Components.Login
@using FeedApp.BlazorServer.Providers
@using Microsoft.AspNetCore.Components.Authorization

<div class="relative min-h-screen bg-gray-100">
    <AuthorizeView>
        <Authorized>
            <div class="flex justify-center pt-16">
                <FeedList></FeedList>
            </div>
        </Authorized>
        <NotAuthorized>
            @if (_isLoading)
            {
                <p>Loading user...</p>
            }
            else
            {
                @* <RedirectToLogin /> *@
            }
        </NotAuthorized>
    </AuthorizeView>
</div>

@code {
    private bool _isLoading = true;
    [Inject] AuthenticationStateProvider AuthProvider { get; set; } = default!;


    protected override async Task OnInitializedAsync()
    {
        var state = await AuthProvider.GetAuthenticationStateAsync();
        if (!state.User.Identity?.IsAuthenticated ?? true)
        {
            // Próbáljuk újrainicializálni (hátha most már van token)
            if (AuthProvider is CustomAuthStateProvider custom)
                await custom.InitializeAsync();

            state = await AuthProvider.GetAuthenticationStateAsync();
        }

        _isLoading = false;
    }
}